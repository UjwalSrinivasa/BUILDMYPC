<div class="container-fluid">
	<%= will_paginate @products %>
</div>

<div class="container-fluid">
	<div class="row remove-padding" >
		<% @products.each do |product| %>
			<div class="col-md-6 col-xs-12" id="border-show">
				<div class="col-md-8 col-xs-12 display-image">
					<%= image_tag(product.image.url(:standard)) %>
					<% if logged_in? %>
						<linc><%= link_to 'Edit', edit_product_path(product, val: yield(:val)) %></linc>
						<linc><%= link_to 'Delete', product_path(product, val: yield(:val)) , method: :delete, data: {confirm: "Are You sure?"} %></linc>
					<% end %>
				</div>
				<div class="col-md-4 col-xs-12">
					<name><%= link_to product.name, product_path(product) %></name>
					<h2>â‚¹<%= product.price %>\-</h2>
				</div>
			</div>	
		<%end%>
	</div>
</div>

<div class="container-fluid">
	<%= will_paginate @products %>
</div>