<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@type) do |f| %>
		<h3><%= yield(:content) %></h3>
		<%= render 'shared/error_messages', object: f.object %>

		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>

		<%= f.label :value %>
		<%= f.number_field :value, class: 'form-control' %>

		<%= f.submit yield(:button), class: "btn btn-primary" %>
	<%end%>
  </div>
</div>